# Configuración del Frontend - VoluntariosGT
# Copia este archivo como .env y configura los valores para tu entorno

# URLs del Backend
EXPO_PUBLIC_API_BASE_URL_DEV=http://localhost:5000/api
EXPO_PUBLIC_API_BASE_URL_PROD=https://tu-backend-produccion.com/api

# Configuración de Supabase
EXPO_PUBLIC_SUPABASE_URL=tu_supabase_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=tu_supabase_anon_key

# Configuración de Mapas (Guatemala por defecto)
EXPO_PUBLIC_DEFAULT_LATITUDE=14.6349
EXPO_PUBLIC_DEFAULT_LONGITUDE=-90.5069
EXPO_PUBLIC_DEFAULT_LATITUDE_DELTA=2.0
EXPO_PUBLIC_DEFAULT_LONGITUDE_DELTA=2.0
EXPO_PUBLIC_DEFAULT_SEARCH_RADIUS=5

# Límites de Guatemala
EXPO_PUBLIC_GUATEMALA_NORTH=17.8193
EXPO_PUBLIC_GUATEMALA_SOUTH=13.7373
EXPO_PUBLIC_GUATEMALA_EAST=-88.2256
EXPO_PUBLIC_GUATEMALA_WEST=-92.2714

# Configuración de Archivos (en bytes)
EXPO_PUBLIC_MAX_IMAGE_SIZE=5242880
EXPO_PUBLIC_MAX_DOCUMENT_SIZE=10485760

# Configuración de Validación
EXPO_PUBLIC_DPI_LENGTH=13
EXPO_PUBLIC_MIN_PASSWORD_LENGTH=8
EXPO_PUBLIC_MIN_NAME_LENGTH=2
EXPO_PUBLIC_MIN_DESCRIPTION_LENGTH=20
EXPO_PUBLIC_MIN_ACTIVITY_TITLE_LENGTH=5

# Configuración de Timeouts (en milisegundos)
EXPO_PUBLIC_API_REQUEST_TIMEOUT=30000
EXPO_PUBLIC_LOCATION_REQUEST_TIMEOUT=10000
EXPO_PUBLIC_IMAGE_UPLOAD_TIMEOUT=60000

# Configuración de Paginación
EXPO_PUBLIC_DEFAULT_PAGE_SIZE=10
EXPO_PUBLIC_MAX_PAGE_SIZE=50

# URLs Externas
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://voluntarios-gt.com/privacy
EXPO_PUBLIC_TERMS_OF_SERVICE_URL=https://voluntarios-gt.com/terms
EXPO_PUBLIC_SUPPORT_EMAIL=soporte@voluntarios-gt.com
EXPO_PUBLIC_WEBSITE_URL=https://voluntarios-gt.com

# Configuración de Features (true/false)
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=true
EXPO_PUBLIC_ENABLE_CAMERA=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=false
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=false

# Configuración de Notificaciones
EXPO_PUBLIC_REMINDER_HOURS_BEFORE=24
EXPO_PUBLIC_MAX_NOTIFICATIONS_PER_PAGE=20