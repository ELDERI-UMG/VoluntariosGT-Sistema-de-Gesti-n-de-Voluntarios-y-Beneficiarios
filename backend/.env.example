# =============================================================================
# CONFIGURACIÓN DE ENTORNO - VOLUNTARIOS GT (TEMPLATE)
# =============================================================================
# Copia este archivo como .env y configura tus valores reales
# TODAS LAS CLAVES ESTÁN CONFIGURADAS CORRECTAMENTE EN EL .env PRINCIPAL
# =============================================================================

# =============================================================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================================================
NODE_ENV=development
PORT=5001

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS - SUPABASE
# =============================================================================
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu-anon-key-aqui
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key-aqui

# =============================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN JWT
# =============================================================================
JWT_SECRET=tu-jwt-secret-super-seguro-aqui
JWT_REFRESH_SECRET=tu-refresh-secret-super-seguro-aqui
JWT_EXPIRES_IN=300m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# CONFIGURACIÓN DE NOTIFICACIONES PUSH - ONESIGNAL
# =============================================================================
ONESIGNAL_APP_ID=tu-onesignal-app-id
ONESIGNAL_REST_API_KEY=tu-onesignal-rest-api-key
ONESIGNAL_ORG_ID=tu-onesignal-org-id
ONESIGNAL_ORG_KEY=tu-onesignal-org-key

# =============================================================================
# CONFIGURACIÓN DE FIREBASE
# =============================================================================
FIREBASE_PROJECT_ID=tu-proyecto-firebase
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@tu-proyecto.iam.gserviceaccount.com
FIREBASE_SENDER_ID=tu-sender-id

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================
ENCRYPTION_KEY=tu-clave-de-encriptacion-32-caracteres

# =============================================================================
# CONFIGURACIÓN DE ARCHIVOS
# =============================================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# =============================================================================
# CONFIGURACIÓN DE CORS
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8081

