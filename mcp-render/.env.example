# =============================================================================
# CONFIGURACIÓN MCP RENDER - VOLUNTARIOS GT
# =============================================================================

# Token de autenticación de Render API
RENDER_API_TOKEN=tu_render_api_token_aqui

# ID del servicio principal (backend)
RENDER_SERVICE_ID=srv-xxxxxxxxxxxxxxxxxx

# URL del servicio desplegado
RENDER_SERVICE_URL=https://tu-servicio.onrender.com

# Owner ID (opcional)
RENDER_OWNER_ID=usr-xxxxxxxxxxxxxxxxxx

# Configuración de notificaciones
WEBHOOK_URL=https://tu-webhook-para-notificaciones.com

# Configuración de logging
LOG_LEVEL=info
ENABLE_DETAILED_LOGS=true

# Configuración de timeouts (en milisegundos)
API_TIMEOUT=30000
DEPLOY_TIMEOUT=600000